{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "gutenberg/image-box",
  "title": "Image Box",
  "category": "design",
  "icon": "format-image",
  "description": "Image box with title and description, supports image uploads.",
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "supports": {
    "html": false,
    "anchor": true,
    "align": [
      "left",
      "center",
      "right",
      "wide",
      "full"
    ]
  },
  "attributes": {
    "imageUrl": {
      "type": "string",
      "default": ""
    },
    "imageId": {
      "type": "number",
      "default": 0
    },
    "imageAlt": {
      "type": "string",
      "default": ""
    },
    "imageWidth": {
      "type": "number",
      "default": 100
    },
    "imageHeight": {
      "type": "number",
      "default": 100
    },
    "objectFit": {
      "type": "string",
      "default": "cover"
    },
    "objectPosition": {
      "type": "string",
      "default": "center center"
    },
    "title": {
      "type": "string",
      "default": ""
    },
    "description": {
      "type": "string",
      "default": ""
    },
    "titleSize": {
      "type": "number",
      "default": 20
    },
    "titleColor": {
      "type": "string",
      "default": "#000000"
    },
    "titleFontFamily": {
      "type": "string",
      "default": ""
    },
    "titleFontWeight": {
      "type": "string",
      "default": ""
    },
    "titleTextTransform": {
      "type": "string",
      "default": ""
    },
    "titleFontStyle": {
      "type": "string",
      "default": ""
    },
    "titleTextDecoration": {
      "type": "string",
      "default": ""
    },
    "titleLineHeight": {
      "type": "string",
      "default": ""
    },
    "titleLetterSpacing": {
      "type": "string",
      "default": ""
    },
    "titleWordSpacing": {
      "type": "string",
      "default": ""
    },
    "descriptionSize": {
      "type": "number",
      "default": 14
    },
    "descriptionColor": {
      "type": "string",
      "default": "#666666"
    },
    "descriptionFontFamily": {
      "type": "string",
      "default": ""
    },
    "descriptionFontWeight": {
      "type": "string",
      "default": ""
    },
    "descriptionTextTransform": {
      "type": "string",
      "default": ""
    },
    "descriptionFontStyle": {
      "type": "string",
      "default": ""
    },
    "descriptionTextDecoration": {
      "type": "string",
      "default": ""
    },
    "descriptionLineHeight": {
      "type": "string",
      "default": ""
    },
    "descriptionLetterSpacing": {
      "type": "string",
      "default": ""
    },
    "descriptionWordSpacing": {
      "type": "string",
      "default": ""
    },
    "alignment": {
      "type": "string",
      "default": "left"
    },
    "className": {
      "type": "string",
      "default": ""
    },
    "anchor": {
      "type": "string",
      "default": ""
    },
    "link": {
      "type": "string",
      "default": ""
    },
    "linkTarget": {
      "type": "boolean",
      "default": false
    },
    "nofollow": {
      "type": "boolean",
      "default": false
    }
  }
}