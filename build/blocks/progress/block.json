{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "progressus/progress",
  "version": "0.1.0",
  "title": "Progress Bar",
  "category": "widgets",
  "icon": "minus",
  "description": "Visualize the progress of a task or skill.",
  "supports": {
    "html": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": ""
    },
    "percentage": {
      "type": "number",
      "default": 50
    },
    "innerText": {
      "type": "string",
      "default": ""
    },
    "barColor": {
      "type": "string",
      "default": "#61ce70"
    },
    "backgroundColor": {
      "type": "string",
      "default": "#eee"
    },
    "titleColor": {
      "type": "string",
      "default": ""
    },
    "titleSize": {
      "type": "number",
      "default": 16
    },
    "barHeight": {
      "type": "number",
      "default": 30
    },
    "alignment": {
      "type": "string",
      "default": "left"
    },
    "showPercentage": {
      "type": "boolean",
      "default": true
    },
    "showTitle": {
      "type": "boolean",
      "default": true
    },
    "borderRadius": {
      "type": "number",
      "default": 3
    },
    "textColor": {
      "type": "string",
      "default": "#ffffff"
    }
  },
  "textdomain": "progressus-gutenberg",
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js"
}